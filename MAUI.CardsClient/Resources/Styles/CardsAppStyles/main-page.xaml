<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="card-container" TargetType="CarouselView">
        <Setter Property="HeightRequest" Value="600" />
    </Style>

    <Style x:Key="card" TargetType="Frame">
        <Setter Property="Margin" Value="20, 20" />
    </Style>

    <Style x:Key="card-label" TargetType="Label">
        <Setter Property="BackgroundColor" Value="Aqua" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="Margin" Value="0, 0, 0, 20"/>
    </Style>

    <Style x:Key="cards-button" TargetType="Frame">
        <Setter Property="HeightRequest" Value="100"/>
        <Setter Property="WidthRequest" Value="100" />
    </Style>
    
</ResourceDictionary>